Link: https://leetcode.com/problems/transformed-array/description/?envType=daily-question&envId=2026-02-05

class Solution {
public:
    vector<int> constructTransformedArray(vector<int>& nums) {
        int n = nums.size();
        vector<int> ans(n);
        for(int i=0;i<n;i++){
            int temp = (i+nums[i])%n;
            ans[i] = nums[temp + (-(temp<0)&n)];
        }
        return ans;
    }
};
