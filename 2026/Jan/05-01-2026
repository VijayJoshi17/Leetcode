Link: https://leetcode.com/problems/maximum-matrix-sum/description/?envType=daily-question&envId=2026-01-05

class Solution {
public:
    long long maxMatrixSum(vector<vector<int>>& matrix) {
        long long totalSum = 0;
        int neg=0;
        int minAbs = INT_MAX;
        for(auto &row:matrix){
            for(int v:row){
                if(v<0) neg++;
                int absoluteValue = abs(v);
                totalSum += absoluteValue;
                minAbs = min(minAbs,absoluteValue);
            }
        }
        return (neg%2==0) ? totalSum : totalSum - 2LL*minAbs;
    }
};
