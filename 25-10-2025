Link:   https://leetcode.com/problems/calculate-money-in-leetcode-bank/description/?envType=daily-question&envId=2025-10-25

class Solution {
public:

    int trisum(int n){
        return (n*(n+1)) >> 1;
    }

    int totalMoney(int n) { 
        int nweeks = n/7;
        int rdays = n%7;

        return trisum(n) - 42*trisum(nweeks-1) - 6*nweeks*rdays;
    }
};
